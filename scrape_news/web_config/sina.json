{
  "name": "sina",
  "allowed_domains": "http://sports.sina.com.cn/",
  "start_url": "http://sports.sina.com.cn/nba/",
  "xpath": {
    "link_list": "//ul/li[@class='item']/*/a[contains(@href,'http://sports.sina.com.cn/basketball/nba/')]/@href",
    "title": ".//h1[@class='article-a__title']/text()",
    "source": ".//span[@class='article-a__source']/a[@class='article-a__sourcename']/text()",
    "publishtime": ".//span[@class='article-a__time']/text()",
    "cover": "//div/figure/img/@src",
    "content": "//div[@class='article-a__content']/p/text()"
  }
}